        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var gr=new GlideRecord('x_1622046_leave_ma_leave_logic');
	gr.addQuery('country.name',current.location.country);
	gr.query();
	if(gr.next()){
		if(gr.leave_assignment=='y'){
			var gdt=new GlideDateTime();
			var currentMonth=gdt.getMonthLocalTime() -1;
			var left=12-currentMonth;
			var perMonth=gr.leaves /12;
			var total=perMonth*left;
			var leaveBucket=new GlideRecord('x_1622046_leave_ma_leave_bucket');
			leaveBucket.initialize();
			leaveBucket.leave_type=gr.leave_type;
			leaveBucket.employee=current.sys_id;
			leaveBucket.accured=total;
			leaveBucket.balance=total;
			leaveBucket.taken=0;
			leaveBucket.insert();

		}
		else if(gr.leave_assignment=='m'){
			var month=gr.leaves/12;
			var leaveBucketM=new GlideRecord('x_1622046_leave_ma_leave_bucket');
			leaveBucketM.initialize();
			leaveBucketM.leave_type=gr.leave_type;
			leaveBucketM.employee=current.sys_id;
			leaveBucketM.accured=month;
			leaveBucketM.balance=month;
			leaveBucketM.taken=0;
			leaveBucketM.insert();

		}
	}

})(current, previous);]]></script>
